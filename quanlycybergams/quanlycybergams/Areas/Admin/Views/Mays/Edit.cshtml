@model quanlycybergams.Models.May

@{
    ViewBag.Title = "Chỉnh sửa Máy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_May);

    <div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="my-3">
                    <h1 class="fw-bolder text-center">CHỈNH SỬA MÁY</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Index", "Mays")" class="btn btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TenMay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.TenMay, new { @class = "form-control", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.TenMay, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TinhTrangMay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.TinhTrangMay, new { @class = "form-control", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.TinhTrangMay, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="radio-inline">
                        <input type="radio" name="HoatDong" value="" onclick="clearSelection()" /> Không hoạt động
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.HoatDong, true) Hoạt động
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.HoatDong, false) Hư Máy
                    </label>

                    @Html.ValidationMessageFor(model => model.HoatDong, "", new { @class = "text-danger" })
                </div>

                
                <div class="form-group">
                    @Html.LabelFor(model => model.ID_gia, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ID_gia, new SelectList((List<quanlycybergams.Models.DonGia>)ViewBag.DonGia, "ID_gia", "GiaMay"), "Chọn đơn giá", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_gia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success create-button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}