@model quanlycybergams.Models.DichVu

@{
    ViewBag.Title = "Xác nhận xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="my-3">
                <h1 class="fw-bolder text-center">XÁC NHẬN XÓA</h1>
            </div>
            <div class="table">
                <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenDV)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnhSP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GiaBan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Kho.TenMatHang)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.TenDV)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AnhSP)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.GiaBan)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Kho.TenMatHang)
                            </td>
                            <td>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <button class="btn-sm btn-danger" type="submit" name="delete">Xóa <i class="fa fa-trash"></i></button>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.content-wrapper -->