@model quanlycybergams.Models.DonHang

@{
    ViewBag.Title = "Tạo mới đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">

        <div class="body-wrapper">
            <!--  Header Start -->
            <!--  Header End -->
            <div class="container-fluid">
                <div class="my-3">
                    <h1 class="fw-bolder text-center">TẠO MỚI ĐƠN HÀNG </h1>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Index","DonHangs")" class="btn btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MaDH, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaDH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaDH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_KhachHang, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.ID_KhachHang, new SelectList((List<quanlycybergams.Models.TaiKhoan>)ViewBag.KH, "ID_KhachHang", "TenKhachHang"), "Chọn khách hàng", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_KhachHang, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_DV, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.ID_DV, new SelectList((List<quanlycybergams.Models.DichVu>)ViewBag.DichVu, "ID_DV", "TenDV"), "Chọn dịch vụ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_DV, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ghiChu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ghiChu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ngayDatHang, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ngayDatHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ngayDatHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tongGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tongGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tongGia, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success create-button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}